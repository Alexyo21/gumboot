##
## This is a sample menu.lst file for gumboot.
##

## do not display the menu
## Gumboot-specific behaviour: if used with timeout=0, this means directly boot
#hiddenmenu

splashimage (sd0)/gumboot/splash.ppm

#color NORMAL HIGHLIGHT HELPTEXT HEADING
#color red/blue green/black white/blue white/blue
#color blue/green green/black white/magenta white/magenta
color blue/green green/black white/blue

## timeout 0 means show the menu and do not enable any countdown
timeout 30

# default is poweroff
default 3

title wii-linux-ngx\nOpen default boot menu
	root (sd0)/bootmii
	kernel /zImage
	## will save as default if user selects it
	savedefault
	## 'boot' is always implicit, but must be the last line of a menu entry
	boot

title Find and boot zImage\nBoot zImage on any partition where it can be found
	find --set-root /zImage
	kernel /zImage
	boot

title Reboot
	reboot

title Poweroff
	# 'halt' can also be used
	poweroff
